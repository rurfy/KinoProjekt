                </Tab>
              </tabs>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </TabPane>
            <Button fx:id="filmInfoZurueck" mnemonicParsing="false" onAction="#zumStartBildschirm" text="Zurück">
               <VBox.margin>
                  <Insets top="20.0" />
