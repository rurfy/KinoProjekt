                              <Image url="@../../../avatar_thumb.jpg" />
                           </image>
                        </ImageView>
                        <VBox>
                           <children>
                              <Label fx:id="titel" alignment="TOP_LEFT" text="Avatar - Aufbruch nach Pandora">
